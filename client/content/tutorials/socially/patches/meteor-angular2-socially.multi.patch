+      this.autorun(() => {
+        const found = Parties.findOne(party._id);
+        if (found) {
+          this.total = found.rsvps ?
+            found.rsvps.filter(rsvp => rsvp.response === type).length : 0;
+        }
+      }, true);
+      this.init = true;
+    }
+
+    return this.total;
+  }
+}
